{
	"compilerOptions": {
		"target": "es2015",
		"lib": ["DOM", "es2015", "es2016", "DOM.Iterable", "ESNext"],
		"allowJs": true,
		// "checkJs": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"module": "esnext",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strict": true,
		"noEmit": false,
		"sourceMap": true,
		"skipLibCheck": true
	},
	"compileOnSave": true,
	"include": ["src"]
}
